				<div class="flex flex-row gap-20 mt-12 xl:mt-6">
					<div class="w-1/2">
						<p class="poppins-medium text-3xl xl:text-xl">Order data</p>
						<ul class="poppins-regular text-2xl xl:text-sm">
							<li>[][product-id, product-size]:
								<br>
								[
								{% for item in cart %}[{{item.id}},
									{{item.size}}]

								{% endfor %}
								]</li>
							<li>
								<p>total-price:
									{{price}}</p>
							</li>
						</ul>
					</div>
					<div class="w-1/2">
						<p class="poppins-medium text-3xl xl:text-xl">
							User data
						</p>
						<ul class="poppins-regular text-2xl xl:text-sm">
							<li>
								fullname:
								{{data.fullname}}
							</li>
							<li>
								email:
								{{data.email}}
							</li>
							<li>
								phone:
								{{data.phone}}
							</li>
							<li>
								country:
								{{data.country}}
							</li>
							<li>
								city:
								{{data.city}}
							</li>
							<li>
								address:
								{{data.address}}
							</li>
							<li>
								postal-code:
								{{data.postal}}
							</li>

						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
