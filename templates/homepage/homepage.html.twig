{% extends "base.html.twig" %}

{% block title %}
	{{"placeholder"}}
{% endblock %}

{% block body %}


	<div class="flex justify-center">
		<div class="flex justify-center gap-10 flex-col xl:flex-row align-middle mt-10 mb-[20vw] xl:mb-0">

			{% for item in items %}
				<a href="/product/{{item.id}}">
					<div class="shadow-2xl p-4 xl:w-[20vw] xl:h-[24vw] w-[50vw] h-[56vw]  flex flex-col justify-between">

						<img src={{asset(item.image)}} alt="product-{{item.id}}">
						<div>
							<p class="geologica text-2xl xl:text-lg">{{item.name|upper}}</p>
							<p class="geologica text-2xl xl:text-lg">{{item.price|upper }}{{" $"}}</p>


						</div>
					</div>
				</a>
			{% endfor %}
		</div>
	</div>


	<a class="absolute top-12 right-20 flex flex-row items-center gap-2" href="/cart">
		<i class="fa-solid fa-xl fa-cart-shopping text-4xl xl:text-2xl"></i>
		<p class="geologica text-3xl xl:text-xl">
			{% if app.session.get('quantity') is defined %}
				{{ app.session.get('quantity') != 0 ? app.session.get('quantity') : "" }}
			{% endif %}
		</p>
	</a>
{% endblock %}
